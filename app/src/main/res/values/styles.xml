<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/titillium_web_regular</item>

        <item name="colorControlNormal">@color/white_label_transparent50</item>
        <item name="colorControlActivated">@color/white_label_transparent60</item>

    </style>

    <style name="ButtonWhite">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:background">@drawable/bg_button_white</item>
        <item name="android:fontFamily">@font/titillium_web_bold</item>
    </style>

    <style name="TextTitleRegister" parent="TextBaseMatchWrapContent">
        <item name="android:textSize">@dimen/text20</item>
        <item name="android:fontFamily">@font/titillium_web_bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/margin30</item>
    </style>

    <style name="TextBaseMatchWrapContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextError" parent="TextBaseWrapContent">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:drawableLeft">@drawable/ic_warning_red</item>
        <item name="android:drawablePadding">@dimen/fab_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="TextError.BackgroundLight">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="subTitleFilter">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextBaseWrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonTransparentGray">
        <item name="android:textColor">@color/gray</item>
        <item name="android:background">@drawable/bg_button_gray_stroke</item>
        <item name="android:fontFamily">@font/titillium_web_bold</item>
    </style>

    <style name="ButtonPrimaryDark">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/bg_button_primary_dark</item>
        <item name="android:fontFamily">@font/titillium_web_bold</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:title"></item>
        <item name="android:windowBackground">@drawable/bg_gradient_app</item>
    </style>

    <style name="SwitchStyle">
        <item name="colorControlActivated">@android:color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/titillium_web_bold</item>
    </style>


    <style name="CollapsedText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/titillium_web_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ExpandedText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/titillium_web_bold</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:fontFamily">@font/titillium_web_bold</item>
    </style>

    <style name="TextNumberOfCard" parent="TextBaseWrapContent">
        <item name="android:text">@string/digits_card</item>
        <item name="android:textSize">@dimen/margin16</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextTitleItemMenu" parent="TextBaseWrapContent">
        <item name="android:fontFamily">@font/titillium_web_regular</item>
        <item name="android:textSize">@dimen/text14</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextItemDescription" parent="TextBaseWrapContent">
        <item name="android:fontFamily">@font/titillium_web_regular</item>
        <item name="android:layout_marginTop">@dimen/margin5</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text12</item>
        <item name="android:textColor">@color/white_label_transparent</item>
    </style>

    <style name="TextTitleItem" parent="TextBaseWrapContent">
        <item name="android:fontFamily">@font/titillium_web_light</item>
        <item name="android:textSize">@dimen/text13</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="HiddenText" parent="android:Widget.TextView">
        <item name="android:textSize">4sp</item>
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme2" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <item name="android:fontFamily">@font/titillium_web_regular</item>

        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>


    <style name="ProgressBar" parent="Base.Widget.AppCompat.ProgressBar">
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="compLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">titillium_web_semibold</item>
        <item name="android:textColor">@color/gray_light</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="compValue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">titillium_web_semibold</item>
        <item name="android:textColor">@color/black2</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ButtonActionWhite2">
        <item name="android:layout_marginTop">@dimen/margin20</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:background">@drawable/bg_button_white</item>
        <item name="android:fontFamily">@font/titillium_web_bold</item>
    </style>

</resources>
